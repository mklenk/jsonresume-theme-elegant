unless _.isEmpty(resume.work)
  .detail#work-experience
    +large_icon('office', 'Berufserfahrung')
    .info
      h4.title.text-uppercase Berufserfahrung

      .content
        ul.list-unstyled.clear-margin
          each experience in resume.work
            li.card.card-nested.flex
              .content.has-sidebar
                p.clear-margin.relative
                  +timed_event_title(experience.position, !experience.endDate, 'Derzeit')
                  |,&nbsp;
                  if experience.website
                    a(href=experience.website, target="_blank")= experience.company
                  else
                    |#{experience.company}

                p.text-muted
                  small
                    span.space-right
                      |#{experience.startDate} - #{experience.endDate || 'Heute'}

                    if experience.duration
                      span
                        svg.icon-clock.mr-5
                          use(xlink:href="#icon-clock")
                        |#{experience.duration}

                .mop-wrapper.space-bottom!= experience.summary

                unless _.isEmpty(experience.highlights)
                  ul
                    each highlight in experience.highlights
                      li.mop-wrapper!= highlight
              .sidebar.text-muted.text-center
                p
                  strong= 'Seit:'
                  |&nbsp;#{experience.startDate}

                p
                  if experience.endDate
                    strong= 'Verlassen:'
                    |&nbsp;#{experience.endDate}
                  else
                    strong= 'Derzeit hier'

                if experience.duration
                  p
                    svg.icon-clock.mr-5
                      use(xlink:href="#icon-clock")
                    |#{experience.duration}
